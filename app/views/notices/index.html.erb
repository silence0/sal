<% provide(:title, "notices") %>
<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %></title>
    <%= csrf_meta_tags %>
    <meta charset="utf-8" />
	  <meta name="viewport" content="width=device-width, initial-scale=1" />
    <%= stylesheet_link_tag 'static_pages', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'static_pages', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="page-wrapper">
      <%= render "shared/header" %>
      <div id="main">
        <div class="container">
          <div class="row main-row">
            <div class="2u 12u(mobile)">
              
            </div>
            <div class="8u 12u(mobile) important(mobile)">
              <section>
                <ul class="link-list">
                  <% @notices.each do |notice| %>
                    <li>
                      <p>
                        <%= link_to notice.headline, user_notice_path(id:notice) %>
                        <% if !notice.status %>
                          （未读）
                        <% end %>
                      </p>
                      <%= notice.created_at %>
                    </li>
                  <% end %>
                </ul>
              </section>
            </div>
            <div class="2u 12u(mobile)">
              
            </div>
          </div>
        </div>
      </div>
      <%= render "shared/footer" %>
    </div>
  </body>